@model Overtime.Models.User

@{
    ViewData["Title"] = "Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Password</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="u_password" class="control-label"></label>
                <input asp-for="u_password" class="form-control" type="password" />
                <span asp-validation-for="u_password" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label class="control-label">Confirm Password</label>
                <input name="u_confirm" class="form-control" type="password" />
                <span asp-validation-for="u_password" class="text-danger"></span>
            </div>
           <div class="form-group">
               @ViewBag.Error
           </div>
           <div class="form-group">
                   <input type="submit" value="ChangePassword" class="btn btn-primary" />
           </div>
</form>
    </div>
</div>

